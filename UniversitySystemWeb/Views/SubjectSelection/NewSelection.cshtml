<script>

    $(function () {
        $("#btnSearchStudent").on("click", function () {

            $.ajax({

                type: "POST",
                url: '@Url.Action("SearchStudent")',
                data: { id: $("#txtStudentId").val() },
                datatype: "json",
                cache: false,

                
            success:function (data) {
                    
                //$("#lblResult").html(data.Student)
                $("#txtStudentName").val(data.Student)
            }
            })
                //.error(function () {

                //    alert("Error")
                //});
            return false;


        });
          
          });

</script>