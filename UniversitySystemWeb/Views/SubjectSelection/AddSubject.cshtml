    @foreach (var item in Model)
    {
        using (Html.BeginForm())
        {
            <tr>

                
                    @*@Html.TextBoxFor(modelItem => item.SubjectID)*@
                    @Html.HiddenFor(modelItem => item.SubjectID)
                


                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule)
                </td>
                <td>

                    <input  type="submit" value="Seleccionar" class="btn btn-primary" />

                </td>
            </tr>
        }
}


</table>


